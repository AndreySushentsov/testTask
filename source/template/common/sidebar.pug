.sidebar--social
  h2.sidebar--social_title Мы в соц. сетях
  ul.sidebar--social_list
    -var socials = ['fb.png', 'google.png', 'twitter.png', 'vk.png'];
    each social in socials
      li.sidebar--social_item
        a(href='#').sidebar--social_link
          img(src=`./assets/img/${social}`).sidebar--social_img
    
