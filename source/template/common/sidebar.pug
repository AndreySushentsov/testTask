.sidebar--container
  .sidebar--inner_shadow
    .sidebar--header
      img(src='./assets/img/folder.png').sidebar--header_img
      h3.sidebar--header_title Каталог товаров
    .sidebar--menu
      ul.sidebar--menu_list
        -var items = ['Грунтовки',"Декоративные покрытия","Инструменты","Керамическая плитка , керамогранит","Кирпич, стеновые материалы", "Кровельный материал, гидроизоляция", "Лакокрасочная продукция", "Ленты, скотчи, серпянки","Листовой материал","Материал для фасадов","Металопрокат","Метизы, крепеж", "Напольные покрытия","Панели ПВХ, комплектующие","Пены монтажные, герметики","Пиломатериал", "Поликорбонат сотовый, типлицы", "Потолки и потолочные системы", "Сетки", "Строительные смеси", "Тара, упаковка", "Тепло-, шумоизоляция", "Теплые полы","Цемент, сыпучие материалы"]
        each item in items
          li.sidebar--menu_title
            a(href='#').sidebar--menu_link=item
